[user]
    name = Christoph Gysin
    email = christoph.gysin@gmail.com

[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
    st = status
    di = diff
    ci = commit
    co = checkout
    sl = shortlog
    lo = log
    lol = log --graph --abbrev
    lola = log --graph --abbrev --all
    k = !gitk
    ka = !gitk --all
    unstage = reset HEAD --
    last = log -1 HEAD
    lom = !git --no-pager log origin/master..
    frb = !git fetch origin && git rebase origin/master
    frbi = !git fetch origin && git rebase -i origin/master
    frbp = !git fetch origin && git rebase origin/master && git push origin ${1:-HEAD}:master && true
    backup = push -f --mirror echrgys-bare

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[apply]
    whitespace = fix

[push]
    default = current

[github]
    user = christophgysin
    #token = xxx

[sendemail]
    from = "Christoph Gysin <christoph.gysin@gmail.com>"
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = "christoph.gysin@fr33z3.org"
    smtpserverport = 587

[mergetool "vimdiff3"]
	cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"

[diff "odf"]
    textconv=odt2txt
