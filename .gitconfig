[user]
    name = Christoph Gysin
    email = christoph.gysin@gmail.com

[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
    st = status
    di = diff
    dc = diff --cached
    ci = commit
    co = checkout
    sl = shortlog
    br = branch
    bv = branch -v
    rv = remote -vv
    pick = cherry-pick
    lo = log
    lol = log --graph --abbrev
    lola = log --graph --abbrev --all
    k = !gitk
    ka = !gitk --all
    unstage = reset HEAD --
    last = log -1 HEAD
    lom = !git --no-pager log $(git rev-parse --abbrev-ref --symbolic-full-name @{u})..
    amend = commit --amend -v
    pr = pull --rebase
    prp = !git pull --rebase && git push origin ${1:-HEAD}:${2:-master}
    rbi = rebase -i $(git rev-parse --abbrev-ref --symbolic-full-name @{u})
    frbi = !git fetch origin && git rebase -i $(git rev-parse --abbrev-ref --symbolic-full-name @{u})
    backup = push -f --mirror echrgys-bare
    log-grep = !git log --color=always --grep \"${1}\" | sed \"s/${1}/$(tput setaf 1)\\\\0$(tput sgr0)/g\" && true
    rewind = reset --soft HEAD^

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto

#[apply]
#    whitespace = fix

[push]
    default = current

