# vim: set ft=conf

#debuglog on

output DP-1 position 0,0
output LVDS-1 position 1680,0

output WLC-1 position 0,0
output WLC-2 position 500,0
output WLC-2 resolution 500x500

output * background /usr/share/sway/Sway_Wallpaper_Blue_1920x1080.png fill
gaps 2

font pango:Terminus 14

focus_follows_mouse no
mouse_warping none

set $alt Mod1
set $win Mod1
set $term terminology

# Use Mouse+$win to drag floating windows to their wanted position
floating_modifier $win
#bindsym --whole-window $win+button2 floating toggle

bindsym $win+Return exec $term
bindsym $win+Shift+q kill
bindsym $win+r exec dmenu_run
bindsym $win+d exec --no-startup-id i3-dmenu-desktop

# focus
bindsym $win+h focus left
bindsym $win+j focus down
bindsym $win+k focus up
bindsym $win+l focus right

# move
bindsym $win+Shift+h move left
bindsym $win+Shift+j move down
bindsym $win+Shift+k move up
bindsym $win+Shift+l move right

bindsym XF86AudioLowerVolume exec volume down
bindsym XF86AudioRaiseVolume exec volume up
bindsym XF86AudioMute exec volume toggle-mute
bindsym XF86TouchpadToggle exec touchpad-toggle
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# split
bindsym $win+i split h
bindsym $win+o split v

# fullscreen
bindsym $win+f fullscreen toggle

# toggle tiling / floating
bindsym $win+q floating toggle
bindsym $win+space focus mode_toggle

# switch to workspace
#bindsym $alt+h workspace prev
#bindsym $alt+l workspace next
bindsym $alt+1 workspace number 1
bindsym $alt+2 workspace number 2
bindsym $alt+3 workspace number 3
bindsym $alt+4 workspace number 4
bindsym $alt+5 workspace number 5
bindsym $alt+6 workspace number 6
bindsym $alt+7 workspace number 7
bindsym $alt+8 workspace number 8
bindsym $alt+9 workspace number 9
bindsym $alt+0 workspace number 10

# move focused container to workspace
#bindsym $alt+Shift+1 move container to workspace number 1; workspace number 1
#bindsym $alt+Shift+2 move container to workspace number 2; workspace number 2
#bindsym $alt+Shift+3 move container to workspace number 3; workspace number 3
#bindsym $alt+Shift+4 move container to workspace number 4; workspace number 4
#bindsym $alt+Shift+5 move container to workspace number 5; workspace number 5
#bindsym $alt+Shift+6 move container to workspace number 6; workspace number 6
#bindsym $alt+Shift+7 move container to workspace number 7; workspace number 7
#bindsym $alt+Shift+8 move container to workspace number 8; workspace number 8
#bindsym $alt+Shift+9 move container to workspace number 9; workspace number 9
#bindsym $alt+Shift+0 move container to workspace number 10; workspace number 10

bindsym $alt+Escape reload
bindsym $alt+BackSpace restart
bindsym $alt+Delete exec i3-msg exit

#exec xautolock -time 12 -locker 'screenlock' &
exec setxkbmap ch
bindsym $alt+period exec ~/projects/sway/sway/build/bin/swaylock --image /usr/share/sway/wallpaper.jpg --scaling fill

# resize
bindsym $win+w mode "resize"
mode "resize" {
    bindsym l resize shrink width 5 px or 5 ppt
    bindsym k resize grow height 5 px or 5 ppt
    bindsym j resize shrink height 5 px or 5 ppt
    bindsym h resize grow width 5 px or 5 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bar {
    status_command i3status
    font pango:Terminus 14
}

for_window [class=".*"] border pixel 2
for_window [class="Crags.py"] floating enable

# class                  border  backgr. text    indicator
#client.focused           #004400 #007700 #00dddd #000099
#client.focused_inactive  #002200 #004400 #009999 #000066
#client.unfocused        #333333 #222222 #888888 #292d2e
#client.urgent           #2f343a #900000 #ffffff #90
