alias truecrypt='truecrypt -t'
tcmount(){ sudo truecrypt -t -k "" --protect-hidden=no $1/.volume.tc $1; }
tcumount(){ sudo truecrypt -t -d $1; }
tclist(){ truecrypt -t -l; }
alias datamount='tcmount $HOME/data/crypt'
alias dataumount='tcumount $HOME/data/crypt'
alias pocketmount='tcmount /mnt/pocket/crypt'
alias pocketumount='tcumount /mnt/pocket/crypt'

# vim:ft=sh
