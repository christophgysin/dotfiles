# ssh-agent
SSH_ENV="${HOME}/.ssh/env"
[ -f "${SSH_ENV}" ] && . "${SSH_ENV}"

agent() {
    if [ -z "${SSH_AGENT_PID}" ] || ! ps -ef | grep -q ${SSH_AGENT_PID}.*ssh-agent$; then
        echo -n > "${SSH_ENV}"
        chmod 600 "${SSH_ENV}"
        ssh-agent | grep -v ^echo >> "${SSH_ENV}"
        . "${SSH_ENV}"
        ssh-add
    fi
}

# host aliases
alias xbmc='ssh xbmc'
alias raspi='ssh root@raspi.fr33z3.org'

