# shortcuts
alias l='ls -lh --color=auto'
alias ll='ls -la --color=auto'
alias c='clear'
alias t='vim ~/todo'
alias v='cvlc'
alias m='mpv'
alias mfs='mpv -fs'
alias tv='mpv -fs dvb://'
alias sx='exec startx'
alias sys="sudo systemctl"
type vim &>/dev/null || if type vim.tiny &>/dev/null; then alias vim=vim.tiny; fi
alias g='git'

