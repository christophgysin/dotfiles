# ubuntu default settings

sudo -u gdm gconftool-2 --type=bool --set /desktop/gnome/sound/event_sounds false
sudo -u gdm gconftool-2 --type=bool --set /apps/gdm/simple/greeter/settings-manager-plugins/sound/active false
sudo -u gdm gconftool-2 --set --type string --set /desktop/gnome/background/picture_filename /usr/share/backgrounds/Ropey_Photo_by_Bob_Farrell.jpg
gconftool-2 --set --type string --set /desktop/gnome/background/picture_filename /usr/share/backgrounds/Ropey_Photo_by_Bob_Farrell.jpg
gconftool-2 --type=bool --set /desktop/gnome/sound/event_sounds false
gconftool-2 --type=string --set /apps/metacity/general/button_layout ":close"
gconftool-2 --type=string --set /apps/metacity/global_keybindings/switch_to_workspace_left "<Alt>Left"
gconftool-2 --type=string --set /apps/metacity/global_keybindings/switch_to_workspace_right "<Alt>Right"
gconftool-2 --type=string --set /apps/metacity/global_keybindings/switch_windows "<Alt>Tab"
gconftool-2 --type=string --set /apps/metacity/global_keybindings/switch_windows_backward "<Shift><Alt>Tab"
gconftool-2 --type=string --set /apps/metacity/global_keybindings/run_command_screenshot "Print"
#gconftool-2 --type=string --set /apps/metacity/global_keybindings/run_command_terminal "<Control><Alt>f"
gconftool-2 --type=string --set /apps/metacity/global_keybindings/panel_run_dialog "<Mod4>r"
gconftool-2 --type=string --set /apps/metacity/global_keybindings/run_command_window_screenshot "<Alt>Print"
gconftool-2 --type=string --set /apps/metacity/window_keybindings/toggle_fullscreen "F11"
gconftool-2 --type=string --set /apps/metacity/window_keybindings/move_to_workspace_right "<Control><Alt>Right"
gconftool-2 --type=string --set /apps/metacity/window_keybindings/toggle_maximized "<Alt>Return"
gconftool-2 --type=string --set /apps/metacity/window_keybindings/move_to_workspace_left "<Control><Alt>Left"
gconftool-2 --type=string --set /apps/metacity/window_keybindings/close "<Alt>F4"
gconftool-2 --type=string --set /apps/update-notifier/auto_launch false
gconftool-2 --type=string --set /apps/gnome-power-manager/notify/low_capacity false

sudo aptitude install \
vim git git-svn subversion rxvt-unicode xfonts-terminus \
exuberant-ctags cscope cmake gkrellm ddd apt-file \
openssh-server unison unison-gtk netcat nmap chromium-browser \
mplayer k3b gimp inkscape scribus mkvtoolnix-gui deluge-gtk \
skype flashplugin-installer cifs-utils

