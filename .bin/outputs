#!/bin/bash

case ${1} in
    int|'')
        xrandr \
            --output DP1 --off \
            --output DP2 --off \
            --output DP3 --off
        xrandr \
            --output LVDS1 --auto
            ;;
    ext)
        xrandr \
            --output LVDS1 --off \
            --output DP2 --off
        xrandr \
            --output DP1 --auto \
            --output DP3 --auto --right-of DP1
            ;;
    dup)
        xrandr \
            --output DP2 --off
        xrandr \
            --output LVDS1 --auto \
            --output DP1 --auto --same-as LVDS1 \
            --output DP3 --auto --same-as LVDS1
            ;;
    dual)
        xrandr \
            --output DP2 --off \
            --output DP3 --off
        xrandr \
            --output LVDS1 --auto \
            --output DP1 --auto --right-of LVDS1
            ;;
    triple)
        xrandr \
            --output DP2 --off
        xrandr \
            --output DP1 --auto \
            --output DP3 --auto --right-of DP1
        xrandr \
            --output LVDS1 --auto --pos 3840x460
            ;;
    *)
        echo "usage: $(basename $0) [ [int] | ext | dup | dual | triple ]";
        exit 1;;
esac
