#!/bin/bash

int=LVDS-1
ext=DP-2
vga=VGA-1
pos=left

case ${1} in
    int)
        xrandr \
            --output $int --auto \
            --output $ext --off \
            --output $vga --off \
            ;;
    ext)
        xrandr \
            --output $int --off \
            --output $ext --auto \
            --output $vga --off \
            ;;
    dup)
        xrandr \
            --output $int --auto \
            --output $ext --auto --same-as $int \
            --output $vga --off \
            ;;
    dual)
        xrandr \
            --output $int --auto \
            --output $ext --auto --$pos-of $int --primary \
            --output $vga --off \
            ;;
    vga)
        xrandr \
            --output $int --auto --primary \
            --output $ext --off \
            --output $vga --auto --above $int \
            ;;
    projector)
        xrandr \
            --output $int --off \
            --output $ext --off \
            --output $vga --auto \
            ;;
    all)
        xrandr \
            --output $int --auto \
            --output $ext --left-of $int --primary \
            --output $vga --above $ext \
            ;;
    *)
        echo "usage: $(basename $0) [ int | ext | dup | dual | vga | projector | all ]";
        exit 1;;
esac
