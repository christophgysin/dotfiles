#!/bin/bash

int=LVDS1
ext=DP1
ext2=DP3
pos=left

case ${1} in
    int|'')
        xrandr \
            --output $int --auto \
            --output $ext --off \
            --output $ext2 --off
            ;;
    ext)
        xrandr \
            --output $int --off \
            --output $ext --auto \
            --output $ext2 --auto --right-of $ext
            ;;
    dup)
        xrandr \
            --output $int --auto \
            --output $ext --auto --same-as $int \
            --output $ext2 --auto --same-as $int
            ;;
    dual)
        xrandr \
            --output $int --auto \
            --output $ext --auto --$pos-of $int
            ;;
    triple)
        xrandr \
            --output $ext --auto \
            --output $ext2 --auto --right-of $ext \
            --output $int --auto --pos 3840x640
            ;;
    *)
        echo "usage: $(basename $0) [ [int] | ext | dup | dual | triple ]";
        exit 1;;
esac
