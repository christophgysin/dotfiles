#!/bin/bash
set -e

source ${0%%-*}.inc.sh

# ssh tunnel
ssh -fN \
    -L ${ssh_port}:${internal_host}:22 \
    ${user}@${access_host}

# socks proxy & xmpp/mail forward
ssh -fN -p ${ssh_port} \
    -D ${socks_port} \
    -L ${xmpp_port}:${xmpp_host}:5222 \
    -L ${mail_port}:${mail_host}:443 \
    ${user}@localhost
